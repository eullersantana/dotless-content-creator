generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// ========================================
// CONTENT CREATOR PLATFORM SCHEMA
// ========================================

model Template {
  id          String    @id @default(cuid())
  name        String
  type        String    // PDF | SLIDE
  category    String?
  description String?
  thumbnail   String?
  config      String    // JSON: Design configs (colors, fonts, spacing)
  structure   String    // JSON: Slide/page structure
  isDefault   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  projects    Project[]
}

model Project {
  id          String    @id @default(cuid())
  name        String
  description String?
  templateId  String
  template    Template  @relation(fields: [templateId], references: [id])
  content     String    // JSON: Actual content data
  status      String    @default("DRAFT") // DRAFT | REVIEW | PUBLISHED
  exportUrl   String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  pages       Page[]
}

model Page {
  id          String    @id @default(cuid())
  projectId   String
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  order       Int
  title       String?
  content     String    // JSON: Page-specific content
  overrides   String?   // JSON: Design overrides for this page
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Asset {
  id          String    @id @default(cuid())
  name        String
  type        String    // image | icon | logo | font
  url         String
  tags        String    // JSON array of tags
  metadata    String?   // JSON: Additional metadata (dimensions, colors, etc.)
  createdAt   DateTime  @default(now())
}

model ChatHistory {
  id          String    @id @default(cuid())
  projectId   String
  role        String    // user | assistant | system
  content     String
  actions     String?   // JSON: AI actions taken
  createdAt   DateTime  @default(now())
}
